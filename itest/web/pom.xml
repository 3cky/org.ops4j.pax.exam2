<?xml version='1.0' encoding='UTF-8' ?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.ops4j.pax</groupId>
        <artifactId>exam</artifactId>
        <version>3.0.0-SNAPSHOT</version>
        <relativePath>../../pom</relativePath>
    </parent>

    <groupId>org.ops4j.pax.exam.itest</groupId>
    <artifactId>exam-itest-web</artifactId>
    <packaging>pom</packaging>

    <name>OPS4J Pax Exam Web Container Integration Tests</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-invoker-plugin</artifactId>
                <version>1.5</version>
                <configuration>
                    <streamLogs>true</streamLogs>
                </configuration>
                <executions>

                    <execution>
                        <id>tomcat-openwebbeans</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <profiles>
                                <profile>tomcat</profile>
                                <profile>openwebbeans</profile>
                            </profiles>
                            <cloneProjectsTo>${project.build.directory}/tomcat-openwebbeans</cloneProjectsTo>
                        </configuration>
                    </execution>

                    <execution>
                        <id>tomcat-weld</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <profiles>
                                <profile>tomcat</profile>
                                <profile>weld</profile>
                            </profiles>
                            <cloneProjectsTo>${project.build.directory}/tomcat-weld</cloneProjectsTo>
                        </configuration>
                    </execution>

                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>tomcat</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <pax.exam.container>tomcat</pax.exam.container>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.ops4j.pax.exam</groupId>
                    <artifactId>pax-exam-container-tomcat</artifactId>
                    <version>${project.version}</version>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>weld</id>

            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <properties>
                <pax.exam.cdi.provider>weld</pax.exam.cdi.provider>
            </properties>

            <dependencies>

                <dependency>
                    <groupId>org.jboss.weld.servlet</groupId>
                    <artifactId>weld-servlet-core</artifactId>
                    <scope>test</scope>
                </dependency>

                <dependency>
                    <groupId>org.jboss.weld</groupId>
                    <artifactId>weld-core</artifactId>
                    <scope>test</scope>
                </dependency>

            </dependencies>
        </profile>
        
        <profile>
            <id>openwebbeans</id>

            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <properties>
                <pax.exam.cdi.provider>openwebbeans</pax.exam.cdi.provider>
            </properties>

            <dependencies>

                <dependency>
                    <groupId>org.apache.openwebbeans</groupId>
                    <artifactId>openwebbeans-impl</artifactId>
                    <scope>test</scope>
                </dependency>

                <dependency>
                    <groupId>org.apache.openwebbeans</groupId>
                    <artifactId>openwebbeans-spi</artifactId>
                    <scope>test</scope>
                </dependency>

                <dependency>
                    <groupId>org.apache.openwebbeans</groupId>
                    <artifactId>openwebbeans-resource</artifactId>
                    <scope>test</scope>
                </dependency>

                <dependency>
                    <groupId>org.apache.openwebbeans</groupId>
                    <artifactId>openwebbeans-web</artifactId>
                    <scope>test</scope>
                </dependency>

                <dependency>
                    <groupId>org.apache.openwebbeans</groupId>
                    <artifactId>openwebbeans-tomcat7</artifactId>
                    <scope>test</scope>
                </dependency>

                <dependency>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>geronimo-interceptor_1.1_spec</artifactId>
                    <scope>test</scope>
                </dependency>

            </dependencies>

        </profile>
    </profiles>


    
</project>
